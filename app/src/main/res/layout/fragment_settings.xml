<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="11dp">

    <TextView
        android:id="@+id/shaketochange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Shake to change song"
        android:textColor="#fff"
        android:textSize="17sp" />

    <Switch
        android:id="@+id/switchShake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/shaketochange"
        android:layout_marginRight="16dp"
        android:backgroundTint="#212121" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/shaketochange"
        android:layout_margin="25dp"
        android:background="@color/line"
        android:id="@+id/line1"/>

    <TextView
        android:id="@+id/settings_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Rate the app"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_below="@+id/line1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/settings_rate"
        android:layout_margin="25dp"
        android:background="@color/line"
        android:id="@+id/line2"/>
    <TextView
        android:id="@+id/settings_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Share the app"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_below="@+id/line2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/settings_share"
        android:layout_margin="25dp"
        android:background="@color/line"
        android:id="@+id/line3"/>
</RelativeLayout>